    </android.support.design.widget.AppBarLayout>-->

    <Button
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="#ff0000"
        android:textColor="#ffffff"
        android:text="Close" />

    <ImageView
        android:id="@+id/app_log"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"

        android:layout_centerHorizontal="true"

        android:src="@drawable/logo" />

    <app.zingo.com.agentapp.CustomViews.CustomFontTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Booking Confirmed"
        app:fontName="arial_bold"
        android:layout_below="@id/app_log"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textColor="#000"
        android:id="@+id/response_title"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/response_title"
        android:layout_marginTop="10dp"
        android:text="Guest check-in the Property.After successfull complete booking.You will get your commission"
        android:gravity="center"
        android:textColor="#000000"
        android:id="@+id/response_sub_title"/>


</RelativeLayout>
