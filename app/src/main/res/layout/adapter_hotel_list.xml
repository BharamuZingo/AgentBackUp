<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="8dp"
    android:id="@+id/item_parent_view"
   >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:elevation="4dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v4.view.ViewPager
                android:id="@+id/hotel_images_viewpager"
                android:layout_width="match_parent"
                android:layout_height="250dp" />

            <!-- <View
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:gravity="left"
                 android:layout_gravity="center"
                 android:background="#98000000" />-->

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:id="@+id/verification_image"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 0% discount "
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/search_text_margin"
                android:layout_marginTop="@dimen/deal_text_margin"
                android:gravity="left"
                android:id="@+id/activity_discount"
                android:textSize="15dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@color/colorPrimary"
                android:layout_gravity="top|left"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Rooms Left"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/search_text_margin"
                android:layout_marginTop="@dimen/deal_text_margin"
                android:gravity="left"
                android:textSize="15dp"
                android:id="@+id/txt_room_left"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="#98000000"
                android:layout_gravity="bottom|right"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 km"
                android:id="@+id/hotel_distance"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/search_text_margin"
                android:layout_marginTop="@dimen/deal_text_margin"
                android:gravity="left"
                android:textSize="15dp"
                android:paddingRight="5dp"
                android:background="#98000000"
                android:layout_gravity="bottom|left"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_gravity="bottom">
          <!--  <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:visibility="gone"
                android:layout_gravity="bottom|left"
                android:textColor="#FFFFFF"
                android:padding="2dp"
                android:layout_marginTop="3dp"
                android:background="#6A1B9A"
                android:text="Luxuary"/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_gravity="left"
                    android:textColor="#000000"
                    android:padding="2dp"
                    android:layout_weight="1"
                    android:id="@+id/hotel_name_textview"
                    android:textStyle="bold"
                    android:text="Zingo Hotel"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:padding="2dp"
                    android:paddingRight="3dp"
                    android:id="@+id/hotel_sell_price"
                    android:textStyle="bold"
                    android:text="Rs 0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_gravity="bottom|left"
                    android:textColor="#000000"
                    android:drawableLeft="@drawable/location"
                    android:padding="2dp"
                    android:id="@+id/hotel_address_textview"
                    android:layout_weight="1"
                    android:text="Koramangala"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textColor="#000000"
                    android:padding="2dp"
                    android:id="@+id/hotel_display_price"
                    android:paddingRight="3dp"
                    android:background="@drawable/text_striker"
                    android:text="was Rs 0"/>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>