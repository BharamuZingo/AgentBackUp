<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="app.zingo.com.agentapp.Activities.HourlyChargesActivty">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/hr_activity_toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@drawable/app_home_placeholder"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#98000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#ffffff"
                android:orientation="horizontal">
                <android.support.v7.widget.SearchView
                    android:id="@+id/search_view_hourly"
                    android:clickable="false"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/SearchViewTheme" />

                <TextView
                    android:id="@+id/search_editText_hourly"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"

                    android:layout_weight="1"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:text="Search by City or Locality"
                    android:layout_gravity="center"
                    android:focusableInTouchMode="false"
                    android:background="@android:color/transparent"
                    android:inputType="textVisiblePassword"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:weightSum="1">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.5"
                    android:clipToPadding="false"
                    android:textColorHint="#FFFFFF"
                    android:elevation="50dp"
                    android:gravity="left|center"
                    app:hintTextAppearance="@style/CustomTextAppearances">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/check_in_date_hourly"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:backgroundTint="#bdbdbd"
                        android:cursorVisible="true"
                        android:elevation="50dp"
                        android:gravity="left"
                        android:hint="Check-in Date"
                        android:imeOptions="actionNext"
                        android:focusableInTouchMode="false"
                        android:inputType="number"
                        android:maxLines="1"
                        android:paddingTop="10dp"
                        android:textColor="#FFFFFF"
                        android:textCursorDrawable="@null"
                        android:textSize="16sp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.5"
                    android:textColorHint="#FFFFFF"
                    android:clipToPadding="false"
                    android:elevation="50dp"
                    android:gravity="left|center"
                    app:hintTextAppearance="@style/CustomTextAppearances">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/check_out_date_hourly"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:backgroundTint="#bdbdbd"
                        android:cursorVisible="true"
                        android:elevation="50dp"
                        android:gravity="left"
                        android:hint="Check-out Date"
                        android:focusableInTouchMode="false"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLines="1"
                        android:paddingTop="10dp"
                        android:textColor="#FFFFFF"
                        android:textCursorDrawable="@null"
                        android:textSize="16sp" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:weightSum="1">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.5"
                    android:clipToPadding="false"
                    android:textColorHint="#FFFFFF"
                    android:elevation="50dp"
                    android:gravity="left|center"
                    app:hintTextAppearance="@style/CustomTextAppearances">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/check_in_time_hourly"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:backgroundTint="#bdbdbd"
                        android:cursorVisible="true"
                        android:elevation="50dp"
                        android:gravity="left"
                        android:hint="Check-in Time "
                        android:imeOptions="actionNext"
                        android:focusableInTouchMode="false"
                        android:inputType="number"
                        android:maxLines="1"
                        android:paddingTop="10dp"
                        android:textColor="#FFFFFF"
                        android:textCursorDrawable="@null"
                        android:textSize="16sp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.5"
                    android:textColorHint="#FFFFFF"
                    android:clipToPadding="false"
                    android:elevation="50dp"
                    android:gravity="left|center"
                    app:hintTextAppearance="@style/CustomTextAppearances">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/check_out_time_hourly"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:backgroundTint="#bdbdbd"
                        android:cursorVisible="true"
                        android:elevation="50dp"
                        android:gravity="left"
                        android:hint="Check-out Time"
                        android:focusableInTouchMode="false"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLines="1"
                        android:paddingTop="10dp"
                        android:textColor="#FFFFFF"
                        android:textCursorDrawable="@null"
                        android:textSize="16sp" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/adult_count_hourly"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:prompt="@string/aCount"
                    android:layout_weight="1"
                    android:entries="@array/aCount_arrays"
                    android:background="@drawable/grey_background"/>



                <Spinner
                    android:id="@+id/child_count_hourly"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:prompt="@string/chCount"
                    android:entries="@array/chCount_arrays"
                    android:background="@drawable/grey_background"/>

                <Spinner
                    android:id="@+id/room_count_hourly"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:entries="@array/room_arrays"
                    android:background="@drawable/grey_background"/>
            </LinearLayout>



            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Search"
                android:id="@+id/search_button"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="24dp"
                android:textColor="#000000"
                android:background="@drawable/button_new_style"/>

            <ImageView
                android:layout_width="25dp"
                android:id="@+id/less"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@drawable/up_arrow"/>
        </LinearLayout>

    </FrameLayout>
</LinearLayout>
