<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card-view="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar_Transparent">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@android:color/transparent"
            app:expandedTitleMarginStart="24dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <android.support.v4.view.ViewPager
                android:id="@+id/hotel_images_viewpager"
                android:layout_width="match_parent"
                android:paddingRight="35dp"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_gravity="bottom"
                android:background="@drawable/scrim"/>

            <android.support.v7.widget.Toolbar
                android:id="@+id/anim_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#fff"
                    android:id="@+id/hotel_name_title"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text=""/>

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/hotel_details_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="24dp"
        android:paddingTop="24dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="false"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="-20dp"
                android:elevation="10dp"
                card-view:cardElevation="10dp"
                card_view:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <app.zingo.com.agentapp.CustomViews.CustomFontTextView
                            android:id="@+id/hotel_details_hotel_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Sinq Beach Resort"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            app:fontName="OpenSans_Bold" />

                        <RatingBar
                            android:id="@+id/hotel_rating"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="5dp"
                            android:layout_weight="2"

                            android:max="5"
                            android:maxHeight="50dp"
                            android:minHeight="28dp"
                            android:numStars="5"
                            android:rating="0.0" />
                    </LinearLayout>

                    <app.zingo.com.agentapp.CustomViews.CustomFontTextView
                        android:id="@+id/hotel_locality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:text="Koramangala"
                        android:textSize="12sp"
                        app:fontName="OpenSans_Light" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="20dp"
                        android:paddingTop="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:id="@+id/go_to_hotel_location"
                            android:orientation="vertical">

                            <android.support.v7.widget.CardView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                card-view:cardElevation="30dp"
                                card_view:cardCornerRadius="25dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:elevation="20dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/location_icon" />
                            </android.support.v7.widget.CardView>

                            <app.zingo.com.agentapp.CustomViews.CustomFontTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="LOCATION"
                                android:textColor="#AB47BC"
                                android:textSize="10dp"
                                app:fontName="OpenSans_Bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:id="@+id/display_hotel_images">

                            <android.support.v7.widget.CardView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                card-view:cardElevation="30dp"
                                card_view:cardCornerRadius="25dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:elevation="20dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/camera_icon"
                                    android:textSize="12dp" />
                            </android.support.v7.widget.CardView>

                            <app.zingo.com.agentapp.CustomViews.CustomFontTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="PHOTOS"
                                android:textColor="#AB47BC"
                                android:textSize="10dp"
                                app:fontName="OpenSans_Bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:id="@+id/show_hotel_facilities"
                            android:orientation="vertical">

                            <android.support.v7.widget.CardView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                card-view:cardElevation="30dp"
                                card_view:cardCornerRadius="25dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:elevation="20dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/facility_icon"
                                    android:textSize="12dp" />
                            </android.support.v7.widget.CardView>

                            <app.zingo.com.agentapp.CustomViews.CustomFontTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="FACILITIES"
                                android:textColor="#AB47BC"
                                android:textSize="10dp"
                                app:fontName="OpenSans_Bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:visibility="gone"
                        android:background="#FFCDD2"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center"

                            android:orientation="horizontal">

                            <app.zingo.com.agentapp.CustomViews.CustomFontTextView
                                android:id="@+id/selected_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:gravity="center"
                                android:text="Apr 18"
                                android:textColor="#E53935"
                                android:textSize="14dp"
                                app:fontName="arial_bold" />

                            <app.zingo.com.agentapp.CustomViews.CustomFontTextView
                                android:id="@+id/no_of_selected_nights"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:text="3"
                                android:textColor="#E53935"
                                android:textSize="14dp"
                                app:fontName="arial_bold" />

                            <app.zingo.com.agentapp.CustomViews.CustomFontTextView
                                android:id="@+id/no_of_selected_guest_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:text="3"
                                android:textColor="#E53935"
                                android:textSize="14dp"
                                app:fontName="arial_bold" />
                        </LinearLayout>

                        <app.zingo.com.agentapp.CustomViews.CustomFontTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            android:gravity="center_vertical|right"
                            android:paddingRight="10dp"
                            android:text="Modify"
                            android:textColor="#E53935"
                            android:textSize="14sp"
                            app:fontName="arial_bold" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:elevation="10dp"
                card-view:cardElevation="10dp"
                card_view:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linear_about_hotel"
                        android:orientation="horizontal">
                        <app.zingo.com.agentapp.CustomViews.CustomFontTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="About Hotel"
                            android:textSize="18sp"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:textColor="#000"
                            app:fontName="arial_bold" />

                        <ImageView
                            android:id="@+id/right_about_hotel"
                            android:layout_width="20dp"
                            android:layout_height="17dp"
                            android:layout_gravity="center"
                            android:elevation="20dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/right_arrow" />

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:background="#dadada">

                    </View>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linear_policy"
                        android:orientation="horizontal">
                        <app.zingo.com.agentapp.CustomViews.CustomFontTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Policy"
                            android:textSize="18sp"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:textColor="#000"
                            app:fontName="arial_bold" />
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:elevation="20dp"
                            android:scaleType="centerCrop"
                            android:id="@+id/right_policy"
                            android:src="@drawable/right_arrow" />

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                card-view:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:id="@+id/check_in_date_linearlayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="5dp"
                            android:gravity="center_horizontal"
                            android:text="Check-In" />

                        <TextView
                            android:id="@+id/hotel_details_check_in_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center_horizontal"
                            android:text="00"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/check_out_date_linearlayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center_horizontal"
                            android:text="Check-Out" />

                        <TextView
                            android:id="@+id/hotel_details_check_out_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:drawableRight="@drawable/right_icon"
                            android:gravity="center_horizontal"
                            android:text="00"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#000000" />

                    <LinearLayout
                        android:id="@+id/no_of_guests_and_rooms_linearlayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/hotel_details_no_of_selected_rooms"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center_horizontal"
                            android:text="1 Room" />

                        <TextView
                            android:id="@+id/hotel_details_no_of_guests"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"

                            android:gravity="center_horizontal"
                            android:text="1 Guest"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical">



                <LinearLayout
                    android:id="@+id/personal_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical">

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/booking_personal"
                            android:layout_width="75dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/radio_btn_selector"
                            android:button="@drawable/editext_border"
                            android:gravity="center"
                            android:text="Personal"
                            android:textColor="@drawable/rbtn_textcolor_selector"
                            android:textSize="16sp" />



                        <RadioButton
                            android:id="@+id/booking_company"
                            android:layout_width="75dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/radio_btn_selector"
                            android:button="@drawable/editext_border"
                            android:gravity="center"
                            android:text="Business"
                            android:textColor="@drawable/rbtn_textcolor_selector"
                            android:textSize="16sp" />
                    </RadioGroup>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp">



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"

                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Mobile Number"
                                    android:textSize="14sp"
                                    android:textColor="#000"/>
                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Enter Mobile No"
                                    android:textSize="16sp"
                                    android:maxLines="1"
                                    android:descendantFocusability="beforeDescendants"
                                    android:singleLine="true"
                                    android:lines="1"
                                    android:inputType="number"
                                    android:id="@+id/mobile_guest"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Verify"
                                android:visibility="gone"
                                android:padding="5dp"

                                android:gravity="center"

                                android:textSize="18sp"
                                android:id="@+id/verify_mobile_number"
                                android:textColor="@color/colorPrimary"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/otp_parent"
                            android:layout_marginBottom="5dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"

                                >
                                <!--<android.support.design.widget.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginTop="10dp"
                                    android:clipToPadding="false"
                                    android:gravity="left|center"
                                    android:layout_weight="1"
                                    app:hintTextAppearance="@style/CustomTextAppearance">

                                    <android.support.design.widget.TextInputEditText
                                        android:id="@+id/mobile_otp"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:maxLength="10"
                                        android:fontFamily="sans-serif"
                                        android:gravity="left"
                                        android:hint="OTP"
                                        android:imeOptions="actionNext"
                                        android:inputType="number"
                                        android:maxLines="1"
                                        android:textColor="@color/md_black_1000"
                                        android:textCursorDrawable="@color/colorPrimary"
                                        android:textSize="16sp" />


                                </android.support.design.widget.TextInputLayout>-->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="OTP"
                                        android:textSize="14sp"
                                        android:textColor="#000"/>
                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="Enter OTP"

                                        android:textSize="16sp"
                                        android:id="@+id/mobile_otp"/>
                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="submit"
                                    android:padding="5dp"
                                    android:gravity="center"
                                    android:textSize="18sp"
                                    android:id="@+id/submit_otp"
                                    android:textColor="@color/colorPrimary"
                                    />
                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Resend"
                                android:layout_margin="5dp"
                                android:textSize="16sp"
                                android:textColor="@color/colorPrimary"
                                android:layout_gravity="right"
                                android:id="@+id/resend_otp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/others_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginBottom="5dp"
                                >



                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Name"
                                    android:textSize="14sp"
                                    android:textColor="#000"/>
                                <app.zingo.com.agentapp.CustomViews.CustomAutoCompleteView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Enter name"
                                    android:textSize="16sp"
                                    android:maxLines="1"
                                    android:lines="1"

                                    android:singleLine="true"
                                    android:id="@+id/full_name_guest"/>
                            </LinearLayout>


                            <RadioGroup
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="20dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/booking_male"
                                    android:layout_width="70dp"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/radio_btn_selector"
                                    android:button="@drawable/editext_border"
                                    android:gravity="center"
                                    android:text="Male"
                                    android:textColor="@drawable/rbtn_textcolor_selector"
                                    android:textSize="16sp" />

                                <RadioButton
                                    android:id="@+id/booking_female"
                                    android:layout_width="70dp"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/radio_btn_selector"
                                    android:button="@drawable/editext_border"
                                    android:gravity="center"
                                    android:text="Female"
                                    android:textColor="@drawable/rbtn_textcolor_selector"
                                    android:textSize="16sp" />


                            </RadioGroup>


                            <LinearLayout
