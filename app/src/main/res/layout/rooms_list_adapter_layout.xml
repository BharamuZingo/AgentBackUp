<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" 
    android:layout_width="match_parent" 
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp" 
        android:layout_marginRight="16dp" 
        android:layout_marginBottom="16dp">
            <LinearLayout 
                android:orientation="vertical" 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content">
                    <RelativeLayout 
                        android:gravity="top|bottom|center_vertical|fill_vertical|center|fill" 
                        android:background="#f5f5f5" 
                        android:paddingLeft="15dp" 
                        android:paddingTop="8dp" 
                        android:paddingRight="12dp" 
                        android:paddingBottom="8dp" 
                        android:layout_width="match_parent" 
                        android:layout_height="wrap_content" 
                        android:layout_marginLeft="1dp" 
                        android:layout_marginTop="1dp" android:layout_marginRight="1dp">
                            <TextView
                                android:textSize="16sp"
                                android:textColor="#333333"
                                android:id="@+id/room_hotel_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Room "
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                style="@style/BookingEngineTextStyle" />
                            <TextView
                                android:textSize="16sp"
                                android:textColor="#333333"
                                android:id="@+id/room_count_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:layout_toRightOf="@id/room_hotel_textview"
                                android:layout_centerVertical="true"
                                style="@style/BookingEngineTextStyle" />
                        <ImageView
                            android:id="@+id/img_cancel"
                            android:background="@drawable/icon_bg"
                            android:padding="8dp" android:visibility="visible"
                            android:clickable="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_delete_black"
                            android:tint="#666666"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>


        <View
            android:background="#dedede"
            android:layout_width="match_parent"
            android:layout_height="0.2dp" />
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/room_layout_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">
                <LinearLayout
                    android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0">
                                <TextView
                                    android:textSize="14sp"
                                    android:textColor="#666666"
                                    android:id="@+id/txt_adult_passenger"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Adults"
                                    style="@style/BookingEngineTextStyle" />
                                <TextView
                                    android:textSize="12sp"
                                    android:textColor="#9e9e9e"
                                    android:id="@+id/txt_adult_passenger_sutext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Above 12 yrs" />
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/img_adult_decrement"
                                android:background="@drawable/icon_bg"
                                android:padding="8dp" 
                                android:clickable="true"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginRight="30dp"
                                android:tint="@color/app_widget_accent"
                                android:src="@drawable/ic_remove_black_24dp" />
                            <TextView
                                android:textSize="18sp"
                                android:textColor="#333333"
                                android:id="@+id/txt_adult_passenger_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:layout_centerVertical="true" />
                            <ImageView
                                android:id="@+id/img_adult_increment"
                                android:background="@drawable/icon_bg"
                                android:padding="8dp"
                                android:clickable="true"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="30dp"
                                android:tint="@color/app_widget_accent"
                                android:src="@drawable/ic_add_black_24dp" />
                        </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0">
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:id="@+id/txt_child_passenger"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Children"
                        android:layout_centerVertical="true"
                        style="@style/BookingEngineTextStyle" />
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#9e9e9e"
                        android:id="@+id/txt_child_passenger_sutext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0-12 yrs" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                    android:orientation="horizontal"
                     android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_child_decrement"
                        android:background="@drawable/icon_bg"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="30dp"
                        android:tint="@color/app_widget_accent"
                        android:src="@drawable/ic_remove_black_24dp" />
                    <TextView
                        android:textSize="18sp"
                        android:textColor="#333333"
                        android:id="@+id/txt_child_passenger_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_centerVertical="true" />
                    <ImageView
                        android:id="@+id/img_child_increment"
                        android:background="@drawable/icon_bg"
                        android:padding="8dp"
                        android:clickable="true"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="30dp"
                        android:tint="@color/app_widget_accent"
                        android:src="@drawable/ic_add_black_24dp" />
                </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/child_ages_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView> />
</LinearLayout>
