<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/iv_reset_filter"
            android:layout_width="214.0dip"
            android:layout_height="214.0dip"
            android:src="@drawable/ic_reset_filters"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true" />
        <TextView
            android:textSize="@dimen/text_size_medium"
            android:gravity="center"
            android:id="@+id/tv_empty"
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:text="@string/no_matches_found_filter_new_text"
            android:layout_below="@+id/iv_reset_filter"
            android:layout_centerInParent="true" />
        <Button
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/button_reset_filter"
            android:background="@color/teal_500"
            android:paddingLeft="12.0dip"
            android:paddingRight="12.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.0dip"
            android:text="@string/reset_filter_button_text"
            android:layout_below="@+id/tv_empty"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</RelativeLayout>