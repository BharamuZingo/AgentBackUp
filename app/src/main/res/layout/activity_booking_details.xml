<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card-view="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/appbar_layout_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

   <android.support.v4.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:scrollbars="none"
       >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <!--<android.support.v7.widget.Toolbar
               android:id="@+id/toolbar"
               android:layout_width="match_parent"
               android:layout_height="?attr/actionBarSize"
               app:layout_collapseMode="pin"
               android:background="#E91E63"
               app:popupTheme="@style/AppTheme.PopupOverlay" />-->
           <android.support.design.widget.AppBarLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/details_appbar"
               android:layout_alignParentTop="true"
               >
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:background="#E91E63"
                   android:orientation="horizontal">
                   <android.support.v7.widget.Toolbar
                       android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:layout_gravity="center_vertical"
                       android:background="@drawable/left_arrow_icon"
                       android:id="@+id/hotel_list_back_btn"
                       android:layout_margin="10dp"/>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:layout_gravity="center_vertical">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Booking Details"
                           android:textSize="18sp"
                           android:layout_gravity="center_vertical"
                           android:gravity="center_vertical"
                           android:textColor="#fff"/>

                   </LinearLayout>
               </LinearLayout>

           </android.support.design.widget.AppBarLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:background="@drawable/background">
               <ImageView
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:layout_below="@id/details_appbar"
                   android:layout_gravity="center_horizontal"
                   android:src="@drawable/success_icon"
                   android:layout_marginTop="10dp"
                   android:id="@+id/success_icon"/>
               <app.zingo.com.agentapp.CustomViews.CustomFontTextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/booking_message_text"
                   android:layout_below="@id/success_icon"
                   android:layout_marginTop="5dp"
                   android:gravity="center"
                   android:textColor="#fff"
                   android:textSize="16sp"
                   app:fontName="OpenSans_Bold"
                   android:text="Congrats! Your booking done successfully"/>
               <app.zingo.com.agentapp.CustomViews.CustomFontTextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/booking_number"
                   android:layout_below="@id/booking_message_text"
                   android:layout_marginTop="5dp"
                   android:gravity="center"
                   android:textColor="#fff"
                   android:textSize="15sp"
                   app:fontName="OpenSans_Light"
                   android:text="Booking id: #Zingo123"/>

               <android.support.v7.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="15dp"
                   android:layout_below="@id/booking_number"
                   card-view:cardElevation="5dp"
                   card_view:cardCornerRadius="20dp">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="horizontal">
                       <app.zingo.com.agentapp.CustomViews.CustomFontTextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:id="@+id/guest_check_in_time"
                           android:layout_marginLeft="10dp"
                           android:layout_marginTop="15dp"
                           android:layout_marginBottom="15dp"
                           android:text="Check in time:12:00PM onwards"
                           android:textSize="16sp"
                           app:fontName="OpenSans_Bold"
                           android:textColor="#535353"
                           android:fontFamily="sans-serif-condensed"
                           />
                   </LinearLayout>
               </android.support.v7.widget.CardView>
               <android.support.v7.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="15dp"
                   card-view:cardElevation="5dp"
                   card_view:cardCornerRadius="25dp">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       >
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal"
                           android:padding="15dp">
                           <app.zingo.com.agentapp.CustomViews.CustomFontTextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:id="@+id/booked_hotel_name"
                               android:text="Zingo Hotels"
                               android:layout_weight="1"
                               android:textSize="18sp"
                               app:fontName="OpenSans_Bold"
                               android:gravity="center_vertical"
                               android:layout_gravity="center_vertical"
                               android:textColor="#5e5d5d"
                               android:fontFamily="sans-serif-condensed"
                               />
                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_weight="2"
                               >
                               <ImageView
                                   android:layout_width="150dp"
                                   android:layout_height="65dp"
                                   android:src="@drawable/image"
                                   android:scaleType="centerCrop"
                                   android:id="@+id/booked_hotel_image"
                                   />
                           </LinearLayout>
                       </LinearLayout>
                       <View
                           android:layout_width="match_parent"
                           android:layout_height="0.5dp"
                           android:background="#b1b1b1"
                           android:layout_marginBottom="5dp"/>
                       <app.zingo.com.agentapp.CustomViews.CustomFontTextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:padding="15dp"
                           app:fontName="OpenSans_Light"
                           android:id="@+id/customer_name"
                           android:fontFamily="sans-serif"
                           android:layout_gravity="center_vertical"
                           android:gravity="center_vertical"
                           android:text="For: Peter"
                           android:textColor="#000"
                           android:textSize="12sp"
                           />
                       <View
                           android:layout_width="match_parent"
                           android:layout_height="0.5dp"
                           android:background="#b1b1b1"
                           />
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal"
                           >
                           <app.zingo.com.agentapp.CustomViews.CustomFontTextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:paddingLeft="15dp"
                               android:paddingRight="15dp"
                               android:paddingTop="10dp"
                               android:layout_weight="1"
                               android:textSize="16sp"
                               app:fontName="OpenSans_Bold"
                               android:text="2 Adults, 1 Child \n 2 Room(s)"
                               android:id="@+id/booked_guest_info"
                               android:textColor="#000"
                               android:paddingBottom="10dp"/>
                           <View
                               android:layout_height="match_parent"
                               android:layout_width="0.5dp"
                               android:background="#b1b1b1"
                               />
                           <app.zingo.com.agentapp.CustomViews.CustomFontTextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:paddingLeft="15dp"
                               android:paddingRight="15dp"
                               android:paddingTop="10dp"
                               android:layout_weight="1"
                               android:textSize="16sp"
                               app:fontName="OpenSans_Bold"
                               android:layout_gravity="center_vertical"
                               android:text="Rs. 3500"
                               android:textColor="#000"
                               android:id="@+id/booked_total_price"
                               android:paddingBottom="10dp"/>
                       </LinearLayout>
                       <View
                           android:layout_width="match_parent"
                           android:layout_height="0.5dp"
                           android:background="#b1b1b1"
                           />
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal"
                           >
                           <app.zingo.com.agentapp.CustomViews.CustomFontTextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:paddingLeft="15dp"
                               android:paddingRight="15dp"
                               android:paddingTop="10dp"
                               android:layout_weight="1"
                               android:textSize="14sp"
                               app:fontName="OpenSans_Light"
                               android:textColor="#000"
                               android:gravity="right"
                               android:text="Fri, 25 Apr"
                               android:id="@+id/booked_check_in_date"
                               android:paddingBottom="10dp"/>
                           <app.zingo.com.agentapp.CustomViews.CustomFontTextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_weight="1.8"
                               android:background="#E0E0E0"
                               android:textColor="#616161"
                               app:fontName="OpenSans_Bold"
                               android:id="@+id/booked_no_of_nights"
                               android:textSize="10sp"
                               android:gravity="center"
                               android:text="1N"/>
                           <app.zingo.com.agentapp.CustomViews.CustomFontTextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:paddingLeft="15dp"
                               android:paddingRight="15dp"
                               android:paddingTop="10dp"
                               android:layout_weight="1"
                               android:textSize="14sp"
                               app:fontName="OpenSans_Light"
                               android:textColor="#000"
                               android:gravity="left"
                               android:text="Fri, 26 Apr"
                               android:id="@+id/booked_check_out_date"
                               android:paddingBottom="10dp"/>
                       </LinearLayout>
                       <View
                           android:layout_width="match_parent"
                           android:layout_height="0.5dp"
                           android:background="#b1b1b1"
                           />
                       <app.zingo.com.agentapp.CustomViews.CustomFontTextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:paddingLeft="15dp"
                           android:paddingRight="15dp"
                           android:paddingTop="10dp"
                           android:layout_weight="1"
                           android:textSize="16sp"
                           android:text="60, Jyoti Nivas College Rd, 5th Block, Koramangala, Bengaluru, Karnataka 560095"
                           app:fontName="OpenSans_Light"
                           android:gravity="center"
                           android:layout_gravity="center"
                           android:drawableLeft="@drawable/location"
                           android:id="@+id/booked_hotel_address"
                           android:paddingBottom="10dp"/>
                       <View
                           android:layout_width="match_parent"
                           android:layout_height="0.5dp"
                           android:background="#b1b1b1"
                           />
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal">

                           <app.zingo.com.agentapp.CustomViews.CustomFontTextView
                               android:id="@+id/call_booked_hotel"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_gravity="center"

                               android:drawablePadding="20dp"
                               android:gravity="center"
                               android:paddingBottom="10dp"
                               android:paddingLeft="15dp"
                               android:paddingRight="15dp"
                               android:paddingTop="10dp"

                               android:text="Call Hotel"
                               android:textColor="#E53935"
                               android:textSize="16sp"
                               app:fontName="OpenSans_Light"
                                />
                       </LinearLayout>
                   </LinearLayout>

               </android.support.v7.widget.CardView>


           </LinearLayout>
           <!--<LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_marginTop="10dp"
               android:background="#EEEEEE">-->
               <android.support.v7.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   card-view:cardElevation="10dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="10dp"
                   >
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:padding="20dp">
                       <app.zingo.com.agentapp.CustomViews.CustomFontTextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:textSize="18sp"
                           android:layout_gravity="center"
                           android:gravity="center"
                           app:fontName="OpenSans_Bold"
                           android:text="Payment Details"
                           android:textColor="#515151"/>
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:padding="10dp"
                           android:layout_marginTop="10dp"
                           android:background="@drawable/payment_linearlayout_background">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_margin="10dp">
                                <app.zingo.com.agentapp.CustomViews.CustomFontTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    app:fontName="OpenSans_Light"
                                    android:textColor="#979797"
                                    android:gravity="center"
                                    android:text="Total Tariff"
                                    android:layout_weight="1"/>
                                <app.zingo.com.agentapp.CustomViews.CustomFontTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:id="@+id/total_room_tariff"
                                    app:fontName="OpenSans_Bold"
                                    android:textColor="#5c5c5c"
                                    android:gravity="center"
                                    android:text=""
                                    android:layout_weight="2"/>
                            </LinearLayout>
                           <View
                               android:layout_width="match_parent"
                               android:layout_height="0.5dp"
                               android:background="#b1b1b1"
                               />
                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:orientation="horizontal"
                               android:layout_margin="10dp"
                               android:id="@+id/total_tariff_discount_parent">
                               <app.zingo.com.agentapp.CustomViews.CustomFontTextView
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:textSize="16sp"
                                   app:fontName="OpenSans_Light"
                                   android:textColor="#979797"
                                   android:gravity="center"
                                   android:text="Additional Discount"
                                   android:layout_weight="1"/>
                               <app.zingo.com.agentapp.CustomViews.CustomFontTextView
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:textSize="14sp"
                                   android:id="@+id/total_room_tariff_discount"
                                   app:fontName="OpenSans_Bold"
                                   android:gravity="center"
                                   android:textColor="#5c5c5c"
                                   android:text=""
                                   android:layout_weight="2"/>
                           </LinearLayout>
                           <View
                               android:layout_width="match_parent"
                               android:layout_height="0.5dp"
                               android:background="#b1b1b1"
                               />
                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:orientation="horizontal"
                               android:layout_margin="10dp">
                               <app.zingo.com.agentapp.CustomViews.CustomFontTextView
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:textSize="16sp"
                                   app:fontName="OpenSans_Light"
                                   android:textColor="#979797"
                                   android:gravity="center"
                                   android:text="Amount Payable"
                                   android:layout_weight="1"/>
                               <app.zingo.com.agentapp.CustomViews.CustomFontTextView
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:textSize="14sp"
                                   android:id="@+id/total_room_tariff_amount_payable"
                                   app:fontName="OpenSans_Bold"
                                   android:textColor="#5c5c5c"
                                   android:gravity="center"
                                   android:text=""
                                   android:layout_weight="2"/>
                           </LinearLayout>
                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal"
                           android:layout_marginTop="10dp"
                           android:layout_marginBottom="10dp">
                           <app.zingo.com.agentapp.CustomViews.CustomFontTextView
                               android:layout_width="match_parent"
                               android:layout_height="50dp"
                               android:layout_gravity="center"
                               android:ems="10"
                               android:id="@+id/cancel_booking"
                               android:gravity="center"
                               android:layout_marginLeft="2dp"
                               android:layout_marginRight="2dp"
                               app:fontName="arial_bold"
                               android:textSize="16sp"
                               android:layout_weight="1"
                               android:textColor="#515151"
                               android:background="@drawable/button_background"
                               android:text="Cancel Booking"
                               />
                           <app.zingo.com.agentapp.CustomViews.CustomFontTextView
                               android:layout_width="match_parent"
                               android:layout_height="50dp"
                               android:layout_gravity="center"
                               android:ems="10"
                               android:id="@+id/invoice_booking"
                               android:gravity="center"
                               android:layout_marginLeft="2dp"
                               android:layout_marginRight="2dp"
                               app:fontName="OpenSans_Bold"
                               android:textSize="16sp"
                               android:layout_weight="1"
                               android:textColor="#515151"
                               android:background="@drawable/button_background"
                               android:text="Invoice"
                               />
                           <app.zingo.com.agentapp.CustomViews.CustomFontTextView
                               android:layout_width="match_parent"
                               android:layout_height="50dp"
                               android:layout_gravity="center"
                               android:ems="10"
                               android:layout_weight="1"
                               android:id="@+id/go_to_home_booking"
                               android:layout_marginLeft="2dp"
                               android:layout_marginRight="2dp"
                               android:gravity="center"

                               app:fontName="OpenSans_Bold"
                               android:textSize="16sp"
                               android:textColor="#515151"
                               android:background="@drawable/button_background"
                               android:text="Go To Home"
                               />
                       </LinearLayout>
                   </LinearLayout>
               </android.support.v7.widget.CardView>


           <!--</LinearLayout>-->
       </LinearLayout>

   </android.support.v4.widget.NestedScrollView>



</RelativeLayout>